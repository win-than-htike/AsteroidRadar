<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Header" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.Header">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>


    <style name="TextAppearance.Subtitle" parent="TextAppearance.Body">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>
</resources>